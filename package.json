{
  "name": "sapo-client-sdk",
  "version": "0.3.2",
  "description": "TypeScript SDK for Sapo API",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"examples/**/*.ts\"",
    "prepare": "husky",
    "clean": "rimraf dist",
    "docs": "typedoc --out docs src/index.ts",
    "docs:watch": "typedoc --out docs src/index.ts --watch",
    "secretlint": "secretlint \"**/*\"",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "secretlint",
      "prettier --write",
      "eslint --fix"
    ]
  },
  "keywords": [
    "sapo",
    "api",
    "sdk",
    "typescript",
    "ecommerce"
  ],
  "author": {
    "email": "huyphongbn24@gmail.com",
    "name": "Phong H.",
    "url": "https://github.com/doivjpxx"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/epoxyteam/sapo-client-sdk.git"
  },
  "homepage": "https://github.com/epoxyteam/sapo-client-sdk#readme",
  "bugs": {
    "url": "https://github.com/epoxyteam/sapo-client-sdk/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@secretlint/secretlint-rule-pattern": "^9.3.0",
    "@secretlint/secretlint-rule-preset-recommend": "^9.3.0",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "secretlint": "^9.3.0",
    "typedoc": "^0.25.12",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "form-data": "^4.0.0"
  },
  "files": [
    "dist/**/*"
  ]
}
